# 环境配置示例文件
# Environment Configuration Example File
# 复制此文件为 .env 并填入实际配置值
# Copy this file to .env and fill in actual configuration values

# === 服务器配置 Server Configuration ===
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG=true

# === 数据库配置 Database Configuration ===
# MongoDB 配置
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=knight_hero

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# === 网关服务配置 Gateway Service Configuration ===
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8001
GATEWAY_WEBSOCKET_PORT=8002

# === 游戏逻辑服务配置 Game Logic Service Configuration ===
LOGIC_HOST=0.0.0.0
LOGIC_PORT=8003

# === 聊天服务配置 Chat Service Configuration ===
CHAT_HOST=0.0.0.0
CHAT_PORT=8004

# === 战斗服务配置 Fight Service Configuration ===
FIGHT_HOST=0.0.0.0
FIGHT_PORT=8005

# === gRPC 配置 gRPC Configuration ===
GRPC_SERVER_PORT=50051
GRPC_MAX_WORKERS=10

# === 日志配置 Logging Configuration ===
LOG_LEVEL=INFO
LOG_FILE=logs/server.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# === 安全配置 Security Configuration ===
SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRE_HOURS=24

# === 游戏配置 Game Configuration ===
MAX_PLAYERS_PER_ROOM=10
HEARTBEAT_INTERVAL=30
RECONNECT_TIMEOUT=60